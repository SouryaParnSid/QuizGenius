# RAG System Environment Configuration
# Copy this file to .env and fill in your values

# === REQUIRED ===
# Google Gemini API Key (Required for generation)
GEMINI_API_KEY=your_gemini_api_key_here

# === MODELS ===
# Embedding model from Sentence Transformers
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Gemini model for generation
GEMINI_MODEL=gemini-2.0-flash-exp

# === VECTOR STORE ===
# Vector store type (currently only chromadb supported)
VECTOR_STORE_TYPE=chromadb

# ChromaDB persistence directory
CHROMADB_PERSIST_DIRECTORY=./data/chromadb

# Collection name for documents
COLLECTION_NAME=documents

# === DOCUMENT PROCESSING ===
# Text chunk size for splitting documents
CHUNK_SIZE=1000

# Overlap between chunks
CHUNK_OVERLAP=200

# Maximum tokens per chunk
MAX_TOKENS_PER_CHUNK=512

# === RETRIEVAL ===
# Number of documents to retrieve by default
TOP_K_RETRIEVAL=5

# Minimum similarity threshold for retrieval
SIMILARITY_THRESHOLD=0.7

# === GENERATION ===
# Maximum context length for generation
MAX_CONTEXT_LENGTH=4000

# Temperature for generation (0.0 to 2.0)
TEMPERATURE=0.7

# Maximum output tokens
MAX_OUTPUT_TOKENS=1000

# === FILE HANDLING ===
# Upload directory for temporary files
UPLOAD_DIRECTORY=./data/uploads

# === SYSTEM ===
# Batch size for processing
BATCH_SIZE=32

# Enable caching for embeddings
ENABLE_CACHING=True

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# === API SETTINGS ===
# API host
API_HOST=0.0.0.0

# API port
API_PORT=8000

# CORS origins (comma-separated for multiple origins)
CORS_ORIGINS=*
